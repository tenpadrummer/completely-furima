<ul class='item-lists'>
  <li class='list'>
    <%= link_to item_path(item_list) do %>
      <div class='item-img-content'>
        <%= image_tag item_list.images[0], class: "item-img" %>
        <% if item_list.item_purchase != nil %>
          <div class='sold-out'>
            <span>Sold Out!!</span>
          </div>
        <% end %>
      </div>
      <div class='item-info'>
        <h3 class='item-name'>
          <%= item_list.name %>
        </h3>
        <div class='item-price'>
          <span><%= item_list.price %>円<br>(税込み)</span>
          <div class='star-btn'>
            <%= image_tag "star.png", class:"star-icon" %>
            <span class='star-count'>0</span>
          </div>
        </div>
      </div>
    <% end %>
  </li>
</ul>